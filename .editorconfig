# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{Dockerfile,Dockerfile.*}]
indent_size = 2

[.github/**.yaml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
